<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}

<div class="card post mb-3">
  <div class="card-header post-title-homepage p-3 text-white" style="background:#669e9a;">
    <h4>
      {{{get_emoji}}}
      <a class="text-white" href="/post/{{post.id}}"><strong>{{post.title}}</strong></a>
    </h4>
  </div>
  <div class="card-body p-4">
    <p class="card-text"><strong>{{post.content}}</strong></p>
    <p class="display-7">- Created by {{post.user.username}} on {{format_date post.date_created}}</p>
    <a href="/post/{{post.id}}" class="btn text-white"style="background:#669e9a;">GO TO THE POST</a>
  </div>
</div>

{{/each}}
